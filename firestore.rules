rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Events Collection
    match /events/{eventId} {
      // Anyone can see event details
      allow read: if true;

      // Only authenticated users can create events
      allow create: if request.auth != null;

      // Updates allowed if:
      // 1. You are the creator of the event
      // 2. OR you are just updating the 'attendees' count (for public RSVPs)
      allow update: if (request.auth != null && request.auth.uid == resource.data.creatorId)
                    || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']));

      // Only creator can delete
      allow delete: if request.auth != null && request.auth.uid == resource.data.creatorId;

      // Guests Subcollection (for RSVPs)
      match /guests/{guestId} {
        // Public needs read/write access to RSVP
        // In a production app, you might want to secure this further (e.g. via Cloud Functions)
        allow read, write: if true;
      }
    }

    // Users Collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
